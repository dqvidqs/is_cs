@model IS_CS.Models.Preke

@{
    ViewBag.Title = "preke_Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Prekės informacijos keitimas</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Prekė</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <a>Bar kodas</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.bar_kodas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.bar_kodas, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a>Modelis</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.modelis, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.modelis, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a>Pavadinimas</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.pavadinimas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pavadinimas, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a>Pardavimo kaina, EUR</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.pardavimo_kaina, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pardavimo_kaina, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a>Kiekio tipas</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.kiekio_tipas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kiekio_tipas, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a>Atsakingas darbuotojas</a>
            <div class="col-md-10">
                @Html.EditorFor(model => model.fk_Darbuotojaspaskyros_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fk_Darbuotojaspaskyros_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Išsaugoti" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Grižti", "preke_List")
</div>
