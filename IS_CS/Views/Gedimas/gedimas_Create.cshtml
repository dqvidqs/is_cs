@model IS_CS.Models.Gedima
@{
    ViewBag.Title = "gedimas_Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Naujo gedimo registracija</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Gedimas</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <a>Gedimo tipas</a>
        <div class="col-md-10">
            @Html.EditorFor(model => model.tipas, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tipas, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <a>Pataisymo data</a>
        <div class="col-md-10">
            @Html.EditorFor(model => model.pataisymo_data, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pataisymo_data, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <a>Gedimo būsena</a>
        <div class="col-md-10">
            @Html.DropDownList("Busena", Model.busenos, "Pasirinkite tipą")
            @Html.ValidationMessageFor(model => model.busena, "", new { @class = "text-danger" })
        </div>
    </div>

 

    <div class="form-group">
        <a>Įrenginio id</a>
        <div class="col-md-10">
            @Html.EditorFor(model => model.fk_Remontuojamas_irenginysirenginio_id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.fk_Remontuojamas_irenginysirenginio_id, "", new { @class = "text-danger" })
        </div>
    </div>






    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Sukurti" class="btn btn-default" />
        </div>
    </div>
</div>
}

