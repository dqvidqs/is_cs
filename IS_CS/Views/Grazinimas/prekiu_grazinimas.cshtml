@model IEnumerable<IS_CS.Models.Grazinimo_priezastis>

@{
    ViewBag.Title = "Registracija grąžinimui";
}
<div>
    <h2 id="pageTitle">Prekių registracija grąžinimui:</h2>
    <form action="#" method="get" id="forma">
        <fieldset>
            <legend>Prekės grąžinimo forma:</legend>
            Grąžinimo priežastis:<br>
            @foreach (var item in Model)
            {
                <input type="radio" name="priezastis" value=@Html.DisplayFor(modelItem => item.name) checked> @Html.DisplayFor(modelItem => item.name)<br>;

            }<br>

            Grąžinamas užsakymas:<br>
            <select>
                <option name="uzsakymas" value="pirmas">123</option>
                <option name="uzsakymas" value="antras">124</option>
                <option name="uzsakymas" value="trecias">125</option>
            </select><br><br>

            <label>Platesnis grąžinimo priežasties aprašymas:<br></label>
            <textarea name="aprasymas" id="aprasymas" rows="6" cols="60" class="field-long field-textarea"></textarea>
        </fieldset>
    </form><br><br>
    <button type="submit" form="forma" value="Submit">Pateikti</button>
</div>
