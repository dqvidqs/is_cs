@model IEnumerable<IS_CS.Models.Patvirtinima>
@{
    ViewBag.Title = "Grąžinimo patvirtinimas";
}
<div>
    @foreach (var item in Model)
    {
        if (item.fk_Graznimas_nr.ToString() == Request.QueryString["grazinimas"])
        {
            <h2 id="pageTitle">Prekės grąžinimo patvirtinimas/būsenos keitimas:</h2>
            if (item.ar_preke_gali_buti_grazinta == 0)
            {
                <form action="#" method="get" id="patvirtinti">
                    <fieldset>
                        <legend>Prekės grąžinimo patvirtinimas:</legend>
                        Ar prekė gali būti grąžinta:<br>
                        <input type="radio" name="p" value="0" checked>Taip<br>
                        <input type="radio" name="p" value="1">Ne<br>
                        <button type="submit" form="patvirtinti" value="Submit">Išsaugoti</button>
                    </fieldset>
                </form><br>
            }
            else
            {

                <form action="#" method="get" id="patvirtinti">
                    <fieldset>
                        <legend>Prekės grąžinimo patvirtinimas:</legend>
                        Ar prekė gali būti grąžinta:<br>
                        <input type="radio" name="p" value="0">Taip<br>
                        <input type="radio" name="p" value="1" checked>Ne<br>
                        <button type="submit" form="patvirtinti" value="Submit">Išsaugoti</button>
                    </fieldset>
                </form><br>
            }


            <form action="#" method="get" id="busena" name="busena">
                <fieldset>
                    <legend>Prekės grąžinimo būsena:</legend>
                    <select>
                        <option value="1">Laukiama patvirtinimo</option>
                        <option value="2">Patvirtintas</option>
                        <option value="3">Vykdomas</option>
                        <option value="4">Užbaigtas</option>
                        <option value="5">Atmestas</option>
                    </select><br><br>
            </form><br>
            <button type="submit" form="busena" value="Submit">Išsaugoti</button>


        }
    }
</div>
